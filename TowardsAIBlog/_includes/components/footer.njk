<footer class="footer">
    <div class="footer-container">
        <div class="footer-section">
            <h3>Towards AI</h3>
            <p>{{ site.description }}</p>
        </div>
        
        <div class="footer-section">
            <h3>Quick Links</h3>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/contact/">Contact</a></li>
                <li><a href="/feed.xml">RSS Feed</a></li>
            </ul>
        </div>
        
        <div class="footer-section">
            <h3>Follow Us</h3>
            <ul>
                {% if site.social.twitter %}
                <li><a href="https://twitter.com/{{ site.social.twitter }}" target="_blank" rel="noopener noreferrer">Twitter</a></li>
                {% endif %}
                {% if site.social.linkedin %}
                <li><a href="https://linkedin.com/{{ site.social.linkedin }}" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
                {% endif %}
                {% if site.social.github %}
                <li><a href="https://github.com/{{ site.social.github }}" target="_blank" rel="noopener noreferrer">GitHub</a></li>
                {% endif %}
            </ul>
        </div>
        
        <div class="footer-section">
            <h3>Legal</h3>
            <ul>
                <li><a href="/privacy/">Privacy Policy</a></li>
                <li><a href="/terms/">Terms of Service</a></li>
                <li><a href="/disclaimer/">Affiliate Disclaimer</a></li>
            </ul>
        </div>
    </div>
    
    <div class="footer-bottom">
        <p>&copy; {{ site.buildTime | date("YYYY") }} {{ site.title }}. All rights reserved.</p>
    </div>
</footer>

<style>
.footer-section ul {
    list-style: none;
    padding: 0;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}
</style>
